//site
$rem-value = 10px;
$font-size = 1.6rem;
$font-first := 'Inter UI', serif;
$font-second := 'Volkhov', serif;
$breakpoints := {
  'xxs': 0,
  'xs' : 600px,
  'sm' : 840px,
  'md' : 1024px,
  'lg' : 1280px,
  'xl' : 1440px,
  'xxl' : 1600px//max
}
$site-max-width = $breakpoints.xxl;
//grid
$grid-columns := 12;
$glb-gutter = 1.6rem;
