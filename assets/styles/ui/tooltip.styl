.tooltip
	width: 220px;
	height: 55px;
	border-radius: 4px;
	background-color: rgba(52, 61, 117, 0.93);
	padding: 10px;
	position: absolute;
	top: -65px;
	z-index: 6;
	display: none;
	&.is-showed
		display: flex;
	&:before
		content: '';
		border-left:7px solid transparent;
		border-right:7px solid transparent;
		border-bottom:0px solid transparent;
		border-top:10px solid rgba(52, 61, 117, 0.93);
		position: absolute;
		bottom: - 10px;
		left: 30px;

	&__input
		height: 35px;
		font-size: 14px;
		font-weight: 500;
		line-height:35px;
		color: #656ff5;
		placeholder(#849bc9);
		width:100%;
		border-radius: 2px 0 0 2px;
		padding: 0 10px;
		text-transform: uppercase;
		&::-webkit-input-placeholder { /* Chrome/Opera/Safari */
			text-transform: lowercase;
		}
		&::-moz-placeholder { /* Firefox 19+ */
			text-transform: lowercase;
		}
		&:-ms-input-placeholder { /* IE 10+ */
			text-transform: lowercase;
		}
		&:-moz-placeholder { /* Firefox 18- */
			text-transform: lowercase;
		}
	&__visual-state
		border-radius: 0 2px 2px 0;
		min-height: 35px;
		min-width: 35px;
		background:url(http://bashinsky.pro/sites/barcodes/assets/img/svg/arrow-mini-white.svg);
		background-position: center;
		background-size: 16px 16px;
		background-repeat: no-repeat;
		background-color: #656ff5;
		transition: background-color $glb-anim-drt;
		cursor: pointer;
		&:hover
			background-color: darken(#656ff5, 10%);