.input
	width: 100%;
	padding: 6px 10px;
	font-size: 14px;
	font-weight: 500;
	font-style: normal;
	font-stretch: normal;
	line-height: 1em;
	letter-spacing: normal;
	text-align: left;
	color: #849bc9;
	border-radius: 2px;
	background-color: #ffffff;
	border: solid 1px #849bc9;
	&::-webkit-input-placeholder { /* Chrome/Opera/Safari */
		color: #849bc9;
	}
	&::-moz-placeholder { /* Firefox 19+ */
		color: #849bc9;
	}
	&:-ms-input-placeholder { /* IE 10+ */
		color: #849bc9;
	}
	&:-moz-placeholder { /* Firefox 18- */
		color: #849bc9;
	}
	&:focus
		color: #656ff5;
		border: solid 1px #656ff5;
	&.is-required
		box-shadow: 0 0 2px 1px #656ff5;
		border: solid 1px #849bc9;
		color: #849bc9;
	&.is-value
		color: #656ff5;
	&.is-error
		color: #f5656d;
		background-color: #fef0f0;
		border: solid 1px #f5656d;