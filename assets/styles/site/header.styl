.header
	position:fixed;
	width: calc(100% + 17px);
	&__area
		height: 10em;
		display: flex;
		justify-content: space-between;
		align-items: center;
	&__left
		display: flex;
		align-items: center;
	&__right
		position:absolute;
		right:3em;
		height: 100%;
		display: flex;
		align-items: center;


.logo-title
	font-size: 13px;
	font-weight: 500;
	font-style: normal;
	font-stretch: normal;
	line-height: 1.54;
	letter-spacing: normal;
	color: #ffffff;
	margin-left: 10px;
	text-transform: uppercase;

.logo
	width: 3.1em;
	height: 2.4em;

.navigation
	display: flex;
	align-items: center;
	font-size: 14px
	& > * + *
		margin-left:25px;